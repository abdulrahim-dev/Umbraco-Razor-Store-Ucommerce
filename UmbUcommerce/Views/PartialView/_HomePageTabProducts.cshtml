@model UmbUcommerce.Models.ProductsViewModel
@{ Layout = null; }

@foreach (var product in Model.Products)
{

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="single_top_sellers">
            <div class="top_seller_image">
                <img src="@product.ThumbnailImageUrl" alt="@product.Name">
                <!-- Wishlist -->
                @*<div class="product_wishlist">
                        <a href="wishlist.html" target="_blank"><i class="ti-heart"></i></a>
                    </div>*@
                <!-- Compare -->
                @*<div class="product_compare">
                        <a href="#" title="Compare"><i class="ti-stats-up"></i></a>
                    </div>*@
                <!-- Add to cart -->
                <div class="product_add_to_cart">
                    <a href="@product.Url" title="Add to Cart"><i class="ti-shopping-cart"></i></a>
                </div>
            </div>
            <div class="top_seller_desc">
                <h5><a href="@product.Url">@product.Name</a></h5>
                @if (product.PriceCalculation.ListPrice != null)
                {
                    <h6> @product.PriceCalculation.YourPrice.Amount <span> @product.PriceCalculation.YourPrice.Amount</span></h6>
                }


            </div>
        </div>
    </div>
}
